@using PRN222_English_Exam.ViewModels  
@model List<Exam> 
@{
    ViewData["Title"] = "Home Page";
    var SortBy = TempData["SortBy"]?.ToString() ?? "ExamId";
    var SortOrder = TempData["SortOrder"]?.ToString() ?? "DESC";
}

<div>  
    <form asp-controller="Home" asp-action="Search" method="post">  
        <label for="searchInput">Search Exams:</label>  
        <div class="d-flex gap-2 mb-4">  
            <select name="SortBy">  
                <option value="ExamId" selected="@(SortBy.Equals("ExamId") ? "selected" : null)">Id</option>  
                <option value="Title" selected="@(SortBy.Equals("Title") ? "selected" : null)">Title</option>  
                <option value="CreatedAt" selected="@(SortBy.Equals("CreatedAt") ? "selected" : null)">Created At</option>  
                <option value="UpdatedAt" selected="@(SortBy.Equals("UpdatedAt") ? "selected" : null)">Updated At</option>  
            </select>  
            <select name="SortOrder">  
                <option selected="@(SortOrder.Equals("ASC") ? "selected" : null)" value="ASC">Ascending</option>  
                <option selected="@(SortOrder.Equals("DESC") ? "selected" : null)" value="DESC">Descending</option>  
            </select>  
        </div>  
        <div class="d-flex gap-2 mb-4">  
            <input type="text" value="@TempData["SearchValue"]" name="SearchValue" class="form-control" placeholder="Search by title,id" id="searchInput" />  
            <button type="submit" class="btn btn-primary mt-2">Search</button>  
        </div>  
    </form>  
</div>  
@if (!Model.Any())
{  
        <div class="text-info">No exams found.</div>  
}
else
{  
        <table class="table table-bordered table-hover">  
            <thead class="table-light">  
                <tr>  
                    <th>#</th>  
                    <th>Title</th>  
                    <th>Duration (min)</th>  
                    <th>Created Date</th>  
                    <th>Updated Date</th>  
                    <th>Actions</th>  
                </tr>  
            </thead>  
            <tbody>  
            @for (int i = 0; i < Model.Count; i++)
            {
                var exam = Model[i];  
                    <tr>  
                        <td>@exam.ExamId</td>  
                        <td>@exam.Title</td>  
                        <td>@exam.Duration</td>  
                        <td>@exam.CreatedAt.ToString("yyyy-MM-dd HH:mm")</td>  
                        <td>@exam.UpdatedAt.ToString("yyyy-MM-dd HH:mm")</td>  
                        <td>  
                            <a class="btn btn-sm btn-info" asp-controller="Home" asp-action="TakeExam" asp-route-id=@exam.ExamId>  
                                    <i class="fas fa-edit"></i>  
                            </a>  
                        </td>  
                    </tr>  
            }  
            </tbody>  
        </table>  
}