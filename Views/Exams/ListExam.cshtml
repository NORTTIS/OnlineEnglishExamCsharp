@using PRN222_English_Exam.ViewModels
@model List<Exam>
@{
    ViewData["Title"] = "Exam List";
    ViewData["PageTitle"] = "Exam list";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="d-flex justify-content-between mb-3">
    <a class="btn btn-primary" href="/Admin/Exams/Create">
        <i class="fas fa-plus"></i> Create New Exam
    </a>
</div>

@if (!Model.Any())
{
        <div class="text-info">No exams found.</div>
}
else
{
        <table class="table table-bordered table-hover">
            <thead class="table-light">
                <tr>
                    <th>#</th>
                    <th>Title</th>
                    <th>Duration (min)</th>
                    <th>Created Date</th>
                    <th>Updated Date</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
            @for (int i = 0; i < Model.Count; i++)
            {
                var exam = Model[i];
                        <tr>
                            <td>@(i + 1)</td>
                            <td>@exam.Title</td>
                            <td>@exam.Duration</td>
                            <td>@exam.CreatedAt.ToString("yyyy-MM-dd HH:mm")</td>
                            <td>@exam.UpdatedAt.ToString("yyyy-MM-dd HH:mm")</td>
                            <td>
                                <a class="btn btn-sm btn-info" href="/Admin/Exams/Detail/@exam.ExamId">
                                    <i class="fas fa-eye"></i>
                                </a>
                                <a class="btn btn-sm btn-warning" href="/Admin/Exams/Edit/@exam.ExamId">
                                    <i class="fas fa-edit"></i>
                                </a>
                                <form method="post" asp-action="Delete" asp-route-id="@exam.ExamId" style="display:inline;" 
                                      onsubmit="return confirm('Are you sure you want to delete this exam?');">
                                    <button class="btn btn-sm btn-danger">
                                        <i class="fas fa-trash-alt"></i>
                                    </button>
                                </form>
                            </td>
                        </tr>
            }
            </tbody>
        </table>
}